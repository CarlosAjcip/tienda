@model ProductoVM

@{
    ViewData["Title"] = "Crear Cuenta";
}

<h1>Crear Producto</h1>


<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label autocomplete="off" asp-for="nombre" class="form-label">Nombre</label>
        <input asp-for="nombre" class="form-control" />
        <span asp-validation-for="nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="id_fabricante" class="form-label"></label>
        <select asp-for="id_fabricante" asp-items="Model.TipoFabricanttes" class="form-select"></select>
        <span asp-validation-for="id_fabricante" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label autocomplete="off" asp-for="precio" class="form-label">Precio</label>
        <input asp-for="precio" class="form-control" />
        <span asp-validation-for="precio" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label autocomplete="off" asp-for="disponible" class="form-label"></label>
        <textarea asp-for="disponible" class="form-control"></textarea>
        <span asp-validation-for="disponible" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>
